<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:themes="clr-namespace:SolutionExtensions.UI.Themes;assembly=SolutionExtensions.UI" xmlns:system="clr-namespace:System;assembly=mscorlib">
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_TreeArrow_Static_Stroke}" Color="#FFD6D6D6"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_TreeArrow_Static_Fill}" Color="#FF1F1F1F"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_TreeArrow_MouseOver_Stroke}" Color="#FFD6D6D6"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_TreeArrow_MouseOver_Fill}" Color="#FF1F1F1F"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_TreeArrow_Static_Checked_Stroke}" Color="#FFD6D6D6"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_TreeArrow_Static_Checked_Fill}" Color="#FF403582"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_TreeArrow_MouseOver_Checked_Stroke}" Color="#FFD6D6D6"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_TreeArrow_MouseOver_Checked_Fill}" Color="#FF3D3D3D"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_Stroke}" Color="#FFFAFAFA"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_Fill}" Color="#FF1F1F1F"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_Selected_Stroke}" Color="#FFFAFAFA"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_Selected_Fill}" Color="#FF006CBE"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_Selected_Inactive_Stroke}" Color="#FFFAFAFA"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_Selected_Inactive_Fill}" Color="#FF383838"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.TreeViewItem_Disabled_Stroke}" Color="#FF5C5C5C"/>

    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.Mover_Fill}" Color="#FF3D3D3D"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.Validation_Stroke}" Color="Black"/>
    <SolidColorBrush x:Key="{x:Static themes:ThemeKeys.Validation_Fill}" Color="Orange"/>

    <!-- can simulate dark theme for these styles-->
    <Style TargetType="Button" x:Key="{x:Static themes:ThemeKeys.Button_Style}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Background" Value="#FF3D3D3D"/>
        <Setter Property="Foreground" Value="#FFFAFAFA"/>
        <Setter Property="BorderBrush" Value="#FF3D3D3D"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="10,1,10,1"/>
        <Setter Property="MinWidth" Value="75"/>
        <Setter Property="MinHeight" Value="23"/>
        <Style.Triggers>
            <Trigger Property="IsDefaulted" Value="True">
                <Trigger.Setters>
                    <Setter Property="Background" Value="#FF403582"/>
                    <Setter Property="Foreground" Value="#FFFAFAFA"/>
                    <Setter Property="BorderBrush" Value="#FF403582"/>
                </Trigger.Setters>
            </Trigger>
            <Trigger Property="IsKeyboardFocused" Value="True">
                <Trigger.Setters>
                    <Setter Property="Background" Value="#FF333333"/>
                    <Setter Property="Foreground" Value="#FFFAFAFA"/>
                    <Setter Property="BorderBrush" Value="#FF999999"/>
                </Trigger.Setters>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.Setters>
                    <Setter Property="Background" Value="#FF4D4D4D"/>
                    <Setter Property="Foreground" Value="#FFFAFAFA"/>
                    <Setter Property="BorderBrush" Value="#FF4D4D4D"/>
                </Trigger.Setters>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Trigger.Setters>
                    <Setter Property="Background" Value="#FF333333"/>
                    <Setter Property="Foreground" Value="#FFFAFAFA"/>
                    <Setter Property="BorderBrush" Value="#FF333333"/>
                </Trigger.Setters>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Trigger.Setters>
                    <Setter Property="Background" Value="#FF333333"/>
                    <Setter Property="Foreground" Value="#FF5C5C5C"/>
                    <Setter Property="BorderBrush" Value="#FF3D3D3D"/>
                </Trigger.Setters>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource {x:Static themes:ThemeKeys.Button_Style}}"/>

    <Style TargetType="Label" x:Key="{x:Static themes:ThemeKeys.Label_Style}">
        <Setter Property="Foreground" Value="#FFFAFAFA"/>
    </Style>
    <Style TargetType="Label" BasedOn="{StaticResource {x:Static themes:ThemeKeys.Label_Style}}"/>

    <Style TargetType="TextBox" x:Key="{x:Static themes:ThemeKeys.TextBox_Style}">
        <Setter Property="Background" Value="#FF383838"/>
        <Setter Property="BorderBrush" Value="#FF424242"/>
        <Setter Property="Foreground" Value="#FFFAFAFA"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="AllowDrop" Value="True"/>
        <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
        <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
        <Style.Triggers>
            <Trigger Property="IsKeyboardFocused" Value="True">
                <Trigger.Setters>
                    <Setter Property="Background" Value="#FF1F1F1F"/>
                    <Setter Property="Foreground" Value="#FFFAFAFA"/>
                    <Setter Property="BorderBrush" Value="#FF999999"/>
                </Trigger.Setters>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Trigger.Setters>
                    <Setter Property="Background" Value="#FF333333"/>
                    <Setter Property="Foreground" Value="#FF5C5C5C"/>
                    <Setter Property="BorderBrush" Value="#FF3D3D3D"/>
                </Trigger.Setters>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Static themes:ThemeKeys.TextBox_Style}}">
    </Style>


    <Style TargetType="ContextMenu" >
        <Setter Property="Foreground" Value="#e0e0e0"/>
        <Setter Property="Background" Value="#404040"/>
    </Style>
    <Style TargetType="TreeView">
        <Setter Property="Foreground" Value="#e0e0e0"/>
        <Setter Property="Background" Value="#404040"/>
    </Style>
    <Style TargetType="ComboBox">

        <Setter Property="Foreground" Value="#e0e0e0"/>
        <!--<Setter Property="Background" Value="#404040"/>-->
        <Style.Triggers>
            <Trigger Property="IsEditable" Value="True">
                <Setter Property="Foreground" Value="#e0e0e0"/>
                <!--<Setter Property="Background" Value="#404040"/>-->
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="ListBox">
        <Setter Property="Foreground" Value="#e0e0e0"/>
        <Setter Property="Background" Value="#404040"/>
    </Style>
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="#e0e0e0"/>
        <Setter Property="Background" Value="#404040"/>
    </Style>
    
    <Style TargetType="Button" x:Key="LikeVsActionButton">
        <Setter Property="Foreground" Value="#e0e0e0"/>
        <Setter Property="Background" Value="#404040"/>
    </Style>

    <Style TargetType="Button" x:Key="btn42">
        <Setter Property="Background" Value="DodgerBlue"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
</ResourceDictionary>